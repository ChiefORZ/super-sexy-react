{
  "name": "super-sexy-react",
  "version": "2.0.0",
  "main": "server.js",
  "license": "MIT",
  "scripts": {
    "analyze": "better-npm-run better-analyze",
    "build": "next build",
    "dev": "better-npm-run better-dev",
    "heroku-postbuild": "next build",
    "precommit": "lint-staged",
    "start": "better-npm-run better-start"
  },
  "dependencies": {
    "babel-plugin-styled-components": "1.1.4",
    "better-npm-run": "^0.0.15",
    "body-parser": "^1.17.2",
    "compression": "^1.7.0",
    "es6-promise": "^4.1.1",
    "express": "^4.15.3",
    "heroku-node-settings": "^1.1.0",
    "i18next": "^8.4.3",
    "i18next-browser-languagedetector": "^2.0.0",
    "i18next-express-middleware": "^1.0.5",
    "i18next-node-fs-backend": "^1.0.0",
    "i18next-xhr-backend": "^1.4.2",
    "isomorphic-unfetch": "^2.0.0",
    "jsx-control-statements": "^3.2.5",
    "next": "^3.0.3",
    "nprogress": "^0.2.0",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-helmet": "^5.1.3",
    "react-i18next": "^4.6.4",
    "styled-components": "^2.1.1",
    "styled-normalize": "^2.2.1",
    "webpack-bundle-analyzer": "^2.8.3"
  },
  "devDependencies": {
    "eslint": "^4.2.0",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-jsx-control-statements": "^2.2.0",
    "eslint-plugin-react": "^7.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.2",
    "prettier": "^1.5.3",
    "prettier-eslint": "^6.4.2"
  },
  "betterScripts": {
    "better-analyze": {
      "command": "next build",
      "env": {
        "ANALYZE": 1
      }
    },
    "better-dev": {
      "command": "node server.js",
      "env": {}
    },
    "better-start": {
      "command": "node server.js",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --print-width 100 --single-quote --trailing-comma es5",
      "git add"
    ]
  }
}
